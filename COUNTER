num = effect("3D Point Control")("3D Point").value[0].toFixed();

function addDots(x) {
   
 return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
}

addDots(num)


//with decimals

v = 1323.2;
num = v.toFixed(2).replace(".",",");

function addDots(x) {
   
 return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
}

addDots(num)
